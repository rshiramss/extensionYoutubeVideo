.yt-summary-container {
    background: #212121; /* Dark theme background */
    border: 1px solid #383838; /* Dark border */
    border-radius: 8px; /* Rounded corners */
    padding: 16px;
    margin: 16px 0; /* Margin above/below */
    font-family: 'Roboto', Arial, sans-serif;
    box-shadow: 0 1px 10px rgba(0, 0, 0, 0.3); /* Stronger shadow for dark theme */
    width: 100%; /* Use full width */
    max-height: none; /* Allow content to determine height */
    color: #fff; /* White text for dark theme */
}

/* Light theme styles */
.light-theme .yt-summary-container {
    background: #f9f9f9; /* Light theme fallback */
    color: #0f0f0f; /* Dark text for light theme */
    border: 1px solid #e0e0e0;
}

.yt-summary-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    padding-bottom: 12px;
    border-bottom: 1px solid #383838; /* Darker border for dark theme */
}

.yt-summary-title {
    font-size: 16px;
    font-weight: 500;
    color: #fff; /* White text for dark theme */
}

html:not([dark]) .yt-summary-title {
    color: #0f0f0f; /* Dark text for light theme */
}

.yt-summary-content {
    font-size: 14px;
    line-height: 1.5;
    color: #aaa; /* Light gray text for dark theme */
}

html:not([dark]) .yt-summary-content {
    color: #606060; /* Darker gray for light theme */
}

.yt-summary-point {
    margin-bottom: 10px;
    padding: 10px;
    background: #2d2d2d; /* Dark background for points */
    border-radius: 4px;
    border: 1px solid #383838;
}

html:not([dark]) .yt-summary-point {
    background: #ffffff; /* White background for points in light theme */
    border: 1px solid #efefef;
}
}

.yt-summary-timestamp {
    color: #065fd4;
    font-weight: 500;
    cursor: pointer;
}

.yt-summary-timestamp:hover {
    text-decoration: underline;
}

.yt-summary-loading {
    text-align: center;
    padding: 20px;
    color: #606060;
}

.yt-summary-error {
    color: #cc0000;
    padding: 12px;
    background: #ffebee;
    border-radius: 4px;
    margin-top: 12px;
} 